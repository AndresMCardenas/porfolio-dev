---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SocialPill from '../components/SocialPill.astro';
import LinkedInIcon from '../components/icons/Linkedin.astro';
import GitHubIcon from '../components/icons/GithubIcon.astro';
import MailIconIcon from '../components/icons/Mail.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Brifcase from '../components/icons/Brifcase.astro';
import Proyectos from '../components/Proyectos.astro';
import Proyect from '../components/icons/Proyect.astro';
import ProfileCheck from '../components/icons/ProfileCheck.astro';
import AboutMe from '../components/AboutMe.astro';

---

<Layout 
	title="Porfolio de Andres Cardenas - Desarrollador y Programador"
	description="Conoce mi porfolio y proyectos de desarrollo web y programación, conoce mi experiencia y habilidades."
>
	<main class="px-4" >
		<SectionContainer id="contactame" class="py-44 pb-24">
			<h1 class="text-white text-3xl md:text-4xl lg:text-5xl flex font-bold flex-row gap-x-4 pb-6 lg:pb-10">
				Hola, soy Andrés Mauricio Cárdenas 
				<a 
					href="https://www.linkedin.com/in/andres-mauricio-cardenas-sachez-96102725/"
					target="_blank"
					rel="noopener" 
					class="flex justify-center items-center rounded-full"><Badge>Conoceme</Badge></a>
			</h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
				<span>Apasionado por el aprendizaje continuo. </span> <span class="text-yellow-200/90 opacity-80" > soy un Desarrollador Web Junior y Analista de Sistemas.</span> De Bogota, Colombia. Comprometido con la excelencia y la innovación en cada proyecto que emprendo
			</h2>

			<nav  class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/andres-mauricio-cardenas-sachez-96102725/">
					<LinkedInIcon class="size-6" />
					LinkedIn
				</SocialPill>

				<SocialPill href="https://github.com/AndresMCardenas">
					<GitHubIcon class="size-4 md:size-6" />
					GitHub
				</SocialPill>

				<SocialPill href="mailto:andrescar18@gmail.com">
					<MailIconIcon class="size-4 md:size-6" />
					andrescar18@gmail.com
				</SocialPill>

				<SocialPill href="https://drive.google.com/file/d/10pvVLb1gbpMetZjijYMwW3g3GhijVD83/view?usp=drive_link">
					<MailIconIcon class="size-4 md:size-6" />
					Descargar CV
				</SocialPill>


			</nav>
		</SectionContainer> 

		<SectionContainer id="experiencia" >
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Brifcase class="size-7"/>
				Experiencia laboral
			</h2> 
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos" >
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Proyect class="size-7"/>
				Proyectos
			</h2> 
			<Proyectos />
		</SectionContainer>

		<SectionContainer id="sobre-mi">	
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<ProfileCheck class="size-7"/>
				Sobre mi	
			</h2>
				<AboutMe />
		</SectionContainer>


	</main>
</Layout>


