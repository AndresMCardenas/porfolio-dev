---
import Layout from "../layouts/Layout.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../components/icons/Linkedin.astro";
import GitHubIcon from "../components/icons/GithubIcon.astro";
import MailIconIcon from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Brifcase from "../components/icons/Brifcase.astro";
import Proyectos from "../components/Proyectos.astro";
import Proyect from "../components/icons/Proyect.astro";
import ProfileCheck from "../components/icons/ProfileCheck.astro";
import AboutMe from "../components/AboutMe.astro";
import School from "../components/icons/School.astro";
import Education from "../components/Education.astro";

import { getI18n } from "../components/i18n/index";

const {currentLocale} = Astro;
const i18n = getI18n({currentLocale});

---

<Layout title={i18n.basics.titel} description={i18n.basics.description1}>
  <main class="px-4">
    <SectionContainer id="contactame" class="py-44 pb-24">
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl flex font-bold flex-row gap-x-4 pb-6 lg:pb-10"
      >
        {i18n.basics.greeting}
        {i18n.basics.name}
        <img
          class="rounded-full size-40"
          src={i18n.basics.image}
          alt="Andres Cardenas foto"
        />
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px] text-white">
        <span>{i18n.basics.description1}</span>
        <span class="text-yellow-200/90 opacity-80">
          {i18n.basics.description11}</span
        > {i18n.basics.description12}
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap text-white">
        <SocialPill
          href="https://www.linkedin.com/in/andres-mauricio-cardenas-sanchez-96102725/"
        >
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>

        <SocialPill href="https://github.com/AndresMCardenas">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>

        <SocialPill href={`mailto:${i18n.basics.email}`}>
          <MailIconIcon class="size-4 md:size-6" />
          {i18n.basics.email}
        </SocialPill>

        <SocialPill
          href="https://drive.google.com/file/d/1RlSB5sL1_ePD0ApeqqNtNRvHWQo8wU3B/view?usp=sharing"
        >
          <MailIconIcon class="size-4 md:size-6" />
          {i18n.basics.CV}
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white"
      >
        <Brifcase class="size-7" />
        {i18n.basics.experience}
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white"
      >
        <Proyect class="size-7" />
        {i18n.basics.project}
      </h2>
      <Proyectos />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white"
      >
        <ProfileCheck class="size-7" />
        {i18n.basics.aboutMe}
      </h2>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="education">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-white"
      >
        <School class="size-7" />
        {i18n.basics.education}
      </h2>
      <Education />
    </SectionContainer>
  </main>
</Layout>
